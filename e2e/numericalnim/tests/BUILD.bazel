load("@rules_nim//nim:defs.bzl", "nim_cc_test")

[
    nim_cc_test(
      name = name,
      main = "{}.nim".format(name),
      deps = [
          "//:numericalnim",
          "@measuremancer",
          "@nimble//:arraymancer",
          "@nimble//:nimblas",
          "@nimble//:nimlapack",
          "@nimble//:zip",
          "@nimble//:untar",
          "@nimble//:stb_image",
          "@nimble//:cdt",
      ],
      cc_deps = [
          "@lapack",
      ]
    )
    for name in [
        "test_vector",
        "test_utils",
        "test_optimize",
        "test_ode",
        "test_interpolate",
        "test_integrate",
        "test_differentiate",
    ]
]

